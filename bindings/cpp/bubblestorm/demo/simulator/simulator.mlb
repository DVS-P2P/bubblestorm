local
   $(BS_PATH)/simulator/virtual-system.mlb
in
   ann
      "warnUnused true"
      "forceUsed"
      "nonexhaustiveMatch warn"
      "redundantMatch warn"
      "sequenceNonUnit warn"
   in
      (* include C bindings (sim version) *)
      $(BS_PATH)/bindings/c/bubblestorm/libbubblestorm-sim.mlb
      
      (* put every application supported by the simulator here *)
      bs-sim.mlb
    
      (* start the simulator *)
      $(BS_PATH)/simulator/main/run.sml
   end
end
