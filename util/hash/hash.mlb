ann
   "warnUnused true"
   "forceUsed"
   "nonexhaustiveMatch warn"
   "redundantMatch warn"
   "sequenceNonUnit warn"
in
   local
      $(SML_LIB)/basis/basis.mlb
      ../basic/basic.mlb

      hash.sig
      hash.sml
      hash-algorithm.sig
      hash-algorithm.fun

      local
         $(SML_LIB)/basis/mlton.mlb
      in
         lookup3.sml (* Uses MLton.Word32.rol *)
      end

      hash-table.sig
      hash-table.fun
   in
      signature HASH
      signature HASH_ALGORITHM
      signature HASH_KEY
      signature HASH_PRIMITIVE
      signature HASH_TABLE

      structure Hash
      structure Lookup3

      functor HashAlgorithm
      functor HashTable
   end
end
