   in
      signature HEAP
      signature MANAGED_HEAP
      signature IN_PLACE_ARGUMENT
      signature IN_PLACE_HEAP

      structure HeapSort

      functor Heap
      functor ManagedHeap
      functor InPlaceHeap
   end
end
